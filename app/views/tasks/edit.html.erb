<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Editar Tarea</h1>
      <p class="text-gray-600 mt-2">Actualiza la información de la tarea: <%= @task.title %></p>
      <p class="text-sm text-gray-500">Proyecto: <%= @task.project.name %></p>
    </div>

    <%= form_with model: @task, local: true, class: "bg-white shadow-md rounded-lg p-6" do |form| %>
      <% if @task.errors.any? %>
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-md">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@task.errors.count, "error") %> impidieron guardar esta tarea:
          </h3>
          <ul class="mt-2 text-sm text-red-700">
            <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= form.label :title, "Título", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Título de la tarea" %>
        </div>

        <div>
          <%= form.label :description, "Descripción", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Descripción detallada de la tarea" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :priority, "Prioridad", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :priority,
                options_for_select([
                  ['Sin prioridad', 0],
                  ['Baja', 1],
                  ['Media', 2],
                  ['Alta', 3]
                ], @task.priority),
                {},
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :due_date, "Fecha de vencimiento", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.date_field :due_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :status, "Estado", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :status,
                options_for_select([
                  ['Pendiente', 'pending'],
                  ['En progreso', 'in_progress'],
                  ['Completada', 'completed'],
                  ['Cancelada', 'cancelled']
                ], @task.status),
                {},
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :assigned_to_id, "Asignar a", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :assigned_to_id,
                options_from_collection_for_select(@users, :id, :name, @task.assigned_to_id),
                { prompt: "Seleccionar usuario" },
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>
      </div>

      <div class="flex justify-end space-x-4 mt-8">
        <%= link_to "Cancelar", @task.project, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        <%= form.submit "Actualizar Tarea", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>