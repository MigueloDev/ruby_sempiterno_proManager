<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Proyectos</h1>
    <%= link_to new_project_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      Nuevo Proyecto
    <% end %>
  </div>

  <!-- Filtros -->
  <div class="mb-6 flex flex-wrap gap-4">
    <%= link_to "Todos (#{@projects.count})", projects_path, class: "px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800" %>
    <%= link_to "Activos (#{@active_projects.count})", projects_path(status: 'active'), class: "px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800" %>
    <%= link_to "Completados (#{@completed_projects.count})", projects_path(status: 'completed'), class: "px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800" %>
  </div>

  <!-- Lista de proyectos -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @projects.each do |project| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">
              <%= link_to project.name, project, class: "hover:text-blue-600" %>
            </h3>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
              <%= project.status == 'active' ? 'bg-green-100 text-green-800' :
                  project.status == 'completed' ? 'bg-blue-100 text-blue-800' :
                  project.status == 'on_hold' ? 'bg-yellow-100 text-yellow-800' :
                  'bg-red-100 text-red-800' %>">
              <%= project.status.humanize %>
            </span>
          </div>

          <% if project.description.present? %>
            <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= project.description %></p>
          <% end %>

          <div class="space-y-2 mb-4">
            <div class="flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              <%= pluralize(project.tasks_count, 'tarea') %>
            </div>

            <% if project.due_date.present? %>
              <div class="flex items-center text-sm <%= project.overdue? ? 'text-red-500' : 'text-gray-500' %>">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Vence: <%= project.due_date.strftime("%d/%m/%Y") %>
                <% if project.overdue? %>
                  <span class="ml-2 text-xs bg-red-100 text-red-800 px-2 py-1 rounded">Vencido</span>
                <% end %>
              </div>
            <% end %>
          </div>

          <!-- Barra de progreso -->
          <div class="mb-4">
            <div class="flex justify-between text-xs text-gray-500 mb-1">
              <span>Progreso</span>
              <span><%= project.completion_percentage %>%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: <%= project.completion_percentage %>%"></div>
            </div>
          </div>

          <!-- Acciones -->
          <div class="flex justify-between items-center">
            <div class="flex space-x-2">
              <%= link_to project, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
                Ver detalles
              <% end %>
              <%= link_to edit_project_path(project), class: "text-gray-600 hover:text-gray-800 text-sm" do %>
                Editar
              <% end %>
            </div>

            <%= link_to project_path(project), method: :delete, data: { confirm: '¿Estás seguro de que quieres eliminar este proyecto?' },
                class: "text-red-600 hover:text-red-800 text-sm" do %>
              Eliminar
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @projects.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No hay proyectos</h3>
      <p class="mt-1 text-sm text-gray-500">Comienza creando tu primer proyecto.</p>
      <div class="mt-6">
        <%= link_to new_project_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Crear Proyecto
        <% end %>
      </div>
    </div>
  <% end %>
</div>